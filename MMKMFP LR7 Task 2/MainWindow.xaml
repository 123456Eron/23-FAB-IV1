<Window x:Class="Surface3DHelix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="Lab7 Task2 (Helix)" Height="450" Width="600">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="4">
            <TextBlock Text="a:" VerticalAlignment="Center" Margin="4,0"/>
            <TextBox x:Name="ATextBox" Width="60" Margin="4" Text="1"/>
            <TextBlock Text="c:" VerticalAlignment="Center" Margin="4,0"/>
            <TextBox x:Name="CTextBox" Width="60" Margin="4" Text="1"/>
            <Button Content="Построить" Width="90" Margin="4" Click="BuildClick"/>
        </StackPanel>

        <helix:HelixViewport3D x:Name="HelixView"
                               ZoomExtentsWhenLoaded="True">
            <helix:DefaultLights/>
        </helix:HelixViewport3D>
    </DockPanel>
</Window>
